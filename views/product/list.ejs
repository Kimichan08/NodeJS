<%-include('../layout/header') %> 
<div class="container">
    <a href="/product/add" class="btn btn-success">Them san pham</a>
    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Category ID</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% product.forEach((item,index) => {%>
                <tr>
                    <td scope="row"><%= index + 1 %> </td>
                    <td><%= item.name %> </td>
                    <td><%= item.price %> </td>
                    <td><img src="/uploads/<%= item.image %> " width="150px" alt=""></td>
                    <td><%= item.category_id %> </td>
                    <td><%=(item.status==1) ? 'Hien' : 'An' %> </td>
                    <td>
                        <a href="/product/edit/<%=item.id %> " class="btn btn-primary">Edit</a>
                        <a href="/product/delete/<%=item.id %> " class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <%}); %> 
        </tbody>
    </table>
</div>
<%-include('../layout/footer') %> 